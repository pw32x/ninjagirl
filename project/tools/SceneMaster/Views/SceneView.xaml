<UserControl x:Class="SceneMaster.SceneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SceneMaster" 
             xmlns:viewmodels="clr-namespace:SceneMaster.ViewModels"
             mc:Ignorable="d"
             d:DataContext ="{d:DesignInstance viewmodels:Scene, IsDesignTimeCreatable=True}"
             d:DesignHeight="301" d:DesignWidth="512"
             >
    <Grid Background="Blue">
        <TextBlock Text="{Binding TiledMapFilename}" d:Text="Path To Tiled Map"/>
    </Grid>
</UserControl>
